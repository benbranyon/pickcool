{
  "name": "laravel/laravel",
  "description": "The Laravel Framework.",
  "keywords": ["framework", "laravel"],
  "license": "MIT",
  "require": {
    "laravel/framework": "4.2.*",
    "vlucas/phpdotenv": "1.0.*",
    "facebook/php-sdk-v4" : "4.0.*",
    "guzzle/guzzle": "3.9.*",
    "codesleeve/laravel-stapler": "1.0.*"
  },
  "require-dev": {
    "panique/laravel-sass": "dev-master"
  },
  "autoload": {
    "classmap": [
      "app/classes",
      "app/traits",
      "app/commands",
      "app/controllers",
      "app/models",
      "app/database/migrations",
      "app/tests/TestCase.php"
    ]
  },
  "scripts": {
    "pre-update-cmd": [
      "php artisan clear-compiled"
    ],
    "pre-update-cmd": [
      "rm -rf vendor/codesleeve/stapler"
    ],
    "post-install-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize"
    ],
    "post-update-cmd": [
      "php artisan clear-compiled",
      "php artisan optimize",
      "rm -rf vendor/codesleeve/stapler/.git",
      "git apply codesleeve-stapler-rename_bugfix.patch"    
      "git apply codesleeve-stapler-curl-open-basedir-fix.patch"    
    ],
    "post-create-project-cmd": [
      "php artisan key:generate"
    ]
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "stable"
}
